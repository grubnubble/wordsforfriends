<h2>Log in</h2>

<%= form_tag sessions_path do %>

  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p><%= 
      submit_tag([
          "Right this way, then.", 
          "Aye, aye cap'n!", 
          "What are we waiting for?", 
          "I solemnly swear that I am up to no good.",
          "Let's do this."
        ].sample) 
  %></p>

<% end %>
