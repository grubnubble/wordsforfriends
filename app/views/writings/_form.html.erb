<%= form_for(@writing) do |f| %>
  <% if @writing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@writing.errors.count, "error") %> prohibited this writing from being saved:</h2>

      <ul>
      <% @writing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Writing Title" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Writing Body" %><br />
    <%= f.text_area :body %>
  </div>
  <% if current_user %>
    <div class="field">
      <%= f.check_box :global_r %>
      <%= f.label :global_r, "This writing should be globally viewable." %>
    </div>
    <div class="field">
      <%= f.check_box :friends_r %>
      <%= f.label :friends_r, "This writing should be seen by friends." %>
    </div>
    <div>
      <p>
      Note: Your writings marked <em>globally viewable</em> and <em>friend
        un-viewable</em> will, indeed, be viewable by everyone except your
      friends. This also means, however, that your friends could potentially
      log-out and view these writings. If you don't want friends to view
      this writing, consider posting it anonymously.
      </p>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
