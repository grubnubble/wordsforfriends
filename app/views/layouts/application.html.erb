<%= render "layouts/header" %>

<div class="flash">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
</div>

<div class="container">

  <div class="four columns">
    <%= render "layouts/sidebar" %>
  </div>

  <div class="ten columns">
    <%= yield %>
  </div>

  <div class="two columns">
    <!-- space -->
  </div>

</div>

<%= render "layouts/footer" %>
